<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="frameAction.Pagina2"
             Title="Pagina 2"
             >

    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="ENTRADA" Text="{Binding Name, Mode=TwoWay}"></Entry>
            <Label VerticalOptions="CenterAndExpand" HorizontalOptions="Center" Text="{Binding Name, Mode=TwoWay}"></Label>
            <Label x:Name="LABEL_Z" VerticalOptions="Center" HorizontalOptions="Center" Text="{Binding Name, Mode=TwoWay}"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>